{
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    ".",
    "-p",
    "*test*.py"
  ],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "flake8.args": [
    "--max-line-length=80",
    "--ignore=E111,E114,W503,E125"
  ],
  "files.watcherExclude": {
    "**/target": true
  },
  "editor.rulers": [80]
}